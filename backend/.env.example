# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/ecommerce_digital_goods
MONGODB_TEST_URI=mongodb://localhost:27017/ecommerce_digital_goods_test

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_change_this
REFRESH_TOKEN_EXPIRES_IN=30d

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@ecommerce.com
EMAIL_FROM_NAME=E-commerce Digital Goods

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=ap-southeast-1
AWS_S3_URL=https://your_bucket_name.s3.amazonaws.com

# Alternative: Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Payment Gateways
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# VNPay (Vietnam)
VNPAY_TMN_CODE=your_tmn_code
VNPAY_HASH_SECRET=your_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:5000/api/v1/payment/vnpay/callback

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/zip

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Session
SESSION_SECRET=your_session_secret_change_this

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Loyalty Points Configuration
LOYALTY_POINTS_PER_DOLLAR=10
LOYALTY_POINTS_REDEMPTION_RATE=100

# Default Language
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,vi

# Admin Default Credentials (for seeding)
ADMIN_EMAIL=admin@ecommerce.com
ADMIN_PASSWORD=Admin@123
ADMIN_NAME=System Administrator

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Recommendation Engine
RECOMMENDATION_CACHE_TTL=3600
MAX_RECOMMENDATIONS_PER_USER=10

# Monitoring
ENABLE_MONITORING_LOGS=true
LOG_RETENTION_DAYS=30

# Timezone
TIMEZONE=Asia/Ho_Chi_Minh
